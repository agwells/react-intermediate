{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "jsx": "react"
  },
  "include": ["./src/**/*", "./src/custom.d.ts"],
  "exclude": ["node_modules"]
}
