{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.test.*", "./src/**/*.stories.*"]
}
