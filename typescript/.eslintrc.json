{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": ["warn"],
        "no-unused-vars": ["warn"],
        "max-len": ["warn", { "code": 120 , "ignoreComments": true }]
    },
    "globals": {
        "process": true
    }
}
